import java.util.Scanner;
public class Main

{

public static void main(String[] args)

{
Scanner input = new Scanner (System.in);
double price1,price2,price3;
double quantity1,quantity2,quantity3;
double sub1,sub2,sub3;
double subtotal,tax,total;
System.out.print("Enter the price of item 1:");
price1 = input.nextDouble();
System.out.print("Enter the quantity of item 1:");
quantity1 = input.nextDouble();
sub1= price1*quantity1;
System.out.print("Enter the price of item 2:");
price2 = input.nextDouble();
System.out.print("Enter the quantity of item 2:");
quantity2 = input.nextDouble();
sub2= price2*quantity2;
System.out.print("Enter the price of item 3:");
price3 = input.nextDouble();
System.out.print("Enter the quantity of item 3:");
quantity3 = input.nextDouble();
sub3=price3*quantity3;
subtotal=sub1+sub2+sub3;
System.out.print("Subtotal: $"+subtotal);
tax= (subtotal*.055);
System.out.print("\nTax: $"+tax);
total=subtotal+tax;
System.out.print("\nTotal: $"+total);
}

}
